{
  "name": "blueberry-core",
  "version": "0.0.6",
  "description": "BlueBerry Core Smart Contracts",
  "files": [
    "/contracts"
  ],
  "scripts": {
    "coverage": "NODE_OPTIONS=--max_old_space_size=4096 hardhat coverage",
    "build": "hardhat compile",
    "test": "hardhat test",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "lint": "yarn lint:solidity && yarn lint:typescript",
    "lint:solidity": "solhint 'contracts/**/*.sol' 'test/**/*.sol' 'script/**/*.sol' --fix",
    "lint:typescript": "eslint . --fix --ext .ts --ignore-path ./.eslintignore  --max-warnings 0",
    "prettier": "prettier --write 'contracts/**/*.sol' 'test/**/*.sol' 'script/**/*.sol'"
  },
  "dependencies": {
    "@aave/core-v3": "^1.18.0",
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@openzeppelin/hardhat-upgrades": "^1.19.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.3",
    "chai-ethers": "0.0.1",
    "eslint": "^8.56.0",
    "standard-version": "^9.3.0",
    "ts-generator": "^0.1.1",
    "web3-utils": "^1.3.6"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@paraswap/sdk": "6.4.0",
    "@tenderly/hardhat-tenderly": "^1.4.1",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v3-sdk": "^3.9.0",
    "axios": "^1.4.0",
    "chai": "^4.3.4",
    "dotenv": "^16.0.1",
    "eslint-plugin-mocha-no-only": "^1.1.1",
    "eslint-plugin-prettier": "^5.1.2",
    "ethers": "^5.7.2",
    "hardhat": "^2.19.0",
    "hardhat-abi-exporter": "^2.8.0",
    "hardhat-contract-sizer": "^2.5.0",
    "hardhat-deploy": "^0.8.6",
    "hardhat-deploy-ethers": "^0.3.0-beta.10",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^6.0.0",
    "mocha": "^9.0.0",
    "moment": "^2.29.1",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.1.1",
    "solhint-community": "^3.7.0",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.8.4"
  },
  "resolutions": {
    "@tenderly/hardhat-tenderly/@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers"
  }
}
